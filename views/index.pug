        script(type="text/template" id="dia_template").
            <li data-id=<%=id%>>
                <div>
                    <p><%=hora%></p>
                    <p><%=titul%></p>
                    <p><%=local%></p>
                </div>
                <article>
                    <p><%=text%></p>
                </article>
            </li>

        script(type="text/template" id="dia_cal_template").
            <div>
                <%=dia%>
            </div>

        script(type="text/template" id="condicio_template").
            <article>
                <div><%=temp%></div>
                <div>°c</div>
                <p><%=text%></p>
            </article>

        script(type="text/template" id="previsio_template").
            <article>
                <p> <%=day%> </p>
                <figure class= <%=clase%> > </figure>
                <div class="maxmin">
                    <div> <%=high%> </div>
                    <div> <%=low%> </div>
                </div>
            </article>

        script(type="text/template" id="noticia_template").
            <div class="noticia_template">
                <h4><%=titul%></h4>
                <p><%=text%></p>
            </div>

        script(type="text/template" id="servei_template")
            <div class="servei">
                <div><%=nombre%></div>
                <div>horari: <%=horari%></div>
                <div>tlf: <%=tlf%></div>
            </div>

    body
        div(id="menu_lateral")
            ul
                li
                    p 1
                li
                    p 2
                li
                    p 3

        

        div(id="barra_menu")
            span(class="toggle-panel") info

            div(class="temps_portada")
                div(id="icono_actual_weather")
                div(id="temp_actual")
        header
            section(id="section_cal")
                div(class="div_cal")
                    div(id="div_dia")
                    div(id="div_num")
                    div(id="div_mes")
                    div(id="event_actual") ·event actual·

            section(id="section_meteo")
                div(id="meteo_actual")
                    div(id="meteo_location") Vinaròs
                    div(id="meteo_icon")

                div(id="div_forecast")

        div(id="retorn")
            article
                div
                div    
            article
                div
                div
            p Menu


                    
        section(id="section_info")
            article
                p Farmàcia de guàrdia:
                div(id="guardia_nombre")
                div(id="b5" class="icon-phone2")

        section
            div(id="datepicker" class="calendari")
            nav(id="botonera")
                ul
                    li(id="b1")
                        figure(class="icon-calendar")
                        span Agenda
                    
                    li(id="b2")
                        figure(class="icon-cor")
                        span Serveis
                    
                    li(id="b6")
                        figure(class="icon-truck")
                        span Transports

                    
                    li(id="b3")
                        figure(class="icon-news")
                        span Noticies

                    
                    li(id="b4")
                        figure(class="icon-camera")
                        span Fotos

                    
                    li(id="b6")
                        figure(class="icon-lab")
                        span Futbol
                    
                    li(id="b7")
                        figure(class="icon-fire")
                        span Comentaris

            
        section(id="contenedor_principal")
            div(id="listado2")
            div(id="listado")
            div(id="contenedor")
