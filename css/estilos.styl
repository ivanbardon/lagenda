   
body
    font-size 20px
    color #2E2E2E
    font-family Slabo
    height auto
    width 100%
    overflow-x hidden

#barra_menu
    border-bottom 1px dotted black
    width 100%
    height 45px
    h1
        font-size 22px
        padding 0
        width 220px
        margin-top 15px
        margin-left 65px
    span
        float left
        color rgba(231, 76, 60,1.0)
        width 30px
        margin-left 5px
    
    .temps_portada
            font-size 25px
            float right
            margin-top -50px
            margin-right 5px
            #temp_actual
                font-size .8em
                margin-top -18px
                padding 0px

header 
    width 100%
    height 450px
    overflow-x hidden
    margin-bottom 30px
    border-bottom 1px solid black

    section
        width 100%
        height auto
        cursor pointer
        
                
    #section_cal
        height 450px
        width 320px
        position relative
        left 50%
        margin-left -150px
        margin-top 20px
            
        .div_cal
            font-family DancingScript
            width 270px
            height 320px
            position relative
            left 50%
            top 35%
            margin-top -150px
            margin-left -135px
            text-align center
            font-size 62px
            
            #div_num
                font-size 80px
                position relative
                width 200px
                left 50%
                margin-left -100px
                

            #event_actual
                font-size 30px
                margin-top 20px
                                

    #section_meteo
        display none
        padding 5px
        width 100%
        height 100%
        
        #div_forecast
            width 100%
            height 200px
            
            article
                display inline-block
                width 30%
                height 200px
                border 1px solid black
                vertical-align top
                
                p
                    text-align center
                
                figure
                    font-size 1.5em
                    margin 0px
                    padding 0px
                    display inline-block
                
                .maxmin
                    display inline-block
                    
        
        #meteo_actual
            width 100%
            height 100px
            
            div
                display inline-block
            
            #meteo_icon
                font-size 70px
                float right
                margin 15px 15px 0px 0px
                
#section_info
    width 100%
    height auto
    text-align center
    margin 0 auto
    padding 0px
    
    .right
        float right
        padding 5px
        opacity .8
        
    article
        border 1px dotted black
        border-radius 5px
        margin 15px
        
        div
            display inline-block

#contenedor_principal
    width 100%
    height auto
    position relative
    
#instafeed
    display none

footer
    text-align center
    margin-top 50px


#listado ul
    padding 0px
    margin 0px
    width 300px
    position relative
    left 50%
    margin-left -150px
        
    li
        cursor pointer
        list-style-type none
        border-radius 5px
        padding 15px
        border 1px solid black
        margin-bottom 15px
        
        .headerE
            border-bottom 1px dotted black
            
            .localE
                font-size .7 em

            .diaE
                font-size .7 em
        
        .contentE
            display none
            text-align center
    

